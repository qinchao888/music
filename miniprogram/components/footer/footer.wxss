@import '../../style/common.wxss';
.music_player {
  padding: 0 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  box-sizing: border-box;
  background-color: #fff;
}
.border::before {
  border-top: 1px solid #ccc;
  /*border-top: 1px solid red;*/
}
.music_player>.music_control {
  width: 100%;
  /*position: relative;*/
  display: flex;
  /*z-index: 1;*/
}
.music_player>.music_control>.desc {
  display: flex;
  flex: 1;
  flex-wrap: wrap;
  align-content: center;
  font-size: 28rpx;
  color: #666;
  min-width: 0;
}
.music_player>.music_control>.desc .title, .music_player>.music_control>.desc .singer {
  width: 100%;
  color: #666;
  padding: 8rpx 0;
} 
.music_player>.music_control>.desc .singer {
  /*margin-top: 12rpx;*/
}
.music_player>.music_control>.control {
  flex: 1;
  justify-content: flex-end;
}
.music_player .loop {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
}
.music_player .loop image {
  width: 48rpx;
  height: 48rpx;
}
.music_player .loop text {
  position: absolute;
  font-size: 24rpx;
  color: #666;
}
.music_player .left, .music_player .pause, .music_player .right {
  display: flex;
  justify-content: center;
  align-items: center;
  /*background-color: #e83c3c;*/
  width: 60rpx;
  height: 60rpx;
  margin-right: 36rpx;
  border-radius: 50%;
  color: #fff;
}
.music_player .pause {
  width: 68rpx;
  height: 68rpx;
}
.music_player .control {
  display: flex;
  height: 120rpx;
  align-items: center;
}
.music_player .left image, .music_player .right image {
  width: 20rpx;
  height: 20rpx;
}
.music_player .left image {
  transform: rotate(180deg);
}
.music_player .pause image {
  width: 36rpx;
  height: 36rpx;
}
.pause_icon_style {
  margin-left: 4rpx;
}

.music_slider {
  width: 100%;
  /*position: relative;*/
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  /*z-index: 1;*/
}
.music_slider>.cur_time, .music_slider>.total_time {
  font-size: 26rpx;
  width: 80rpx;
  color: #aaa;
}
.music_slider slider {
  margin-top: 0;
  margin-bottom: 0;
  flex: 1;
}
.pop_value {
  position: absolute;
  font-size: 26rpx;
  color: #333;
  padding: 20rpx;
  border-radius: 8rpx;
  background: rgba(0, 0, 0, .1);
  left: 30rpx;
  bottom: 200rpx;
}
