.music_list {

}
.switch_theme {
  position: fixed;
  top: 80rpx;
  right: -240rpx;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  min-height: 200rpx;
  width: 240rpx;
  z-index: 1;
  background-color: rgba(0, 0, 0, .2);
}
.switch_theme .theme_color,.switch_theme .blue, .switch_theme .green {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  align-items: center;
}
.switch_theme .theme_color view:nth-of-type(2) {
  height: 48rpx;
  width: 120rpx;
}
scroll-view{
  position: fixed;
  top: 80rpx;
  left: 0;
  right: 0;
  bottom: 200rpx;
}
.music_list .my_list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 30rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #666;
  background-color: #f1f1f1;
}
.music_list .my_list .switch {
  margin-right: 30rpx;
}
.music_list .my_list .switch image {
  width: 40rpx;
  height: 40rpx;
}
.music_list .music_list_details {
  display: flex;
  font-size: 30rpx;
  padding-left: 30rpx;
}
.music_list .music_list_details>.left {
  display: flex;
  align-items: center;
}
.music_list .music_list_details>.left image {
  height: 100rpx;
  width: 100rpx;
}
.music_list .music_list_details>.right {
  padding: 30rpx 0 30rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex: 1;
  flex-wrap: wrap;
  align-content: center;
}
/*.music_list .music_list_details:not(:last-child)>.border::before{*/
  .music_list .music_list_details>.border::before{
  border-bottom: 1px solid #ccc;
  /*border-bottom: 1px solid red;*/
}
.music_list .music_list_details>.right>.music_list_title {
  width: 100%;
  color: #333;
}
.music_list .music_list_details>.right>.music_count {
  font-size: 26rpx;
  margin-top: 12rpx;
  width: 100%;
  color: #999;
}