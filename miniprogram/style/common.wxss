.border {
  position: relative;
  display: block;
}
.border::before{
  content: "";
  width: 200%;
  height: 200%;
  transform-origin: left top;
  position: absolute;
  left: 0;
  top: 0;
  transform: scale(0.5);
  box-sizing: border-box;
  z-index: -1;
}
.text_ellipsis {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 90%;
}